{
    "compilerOptions": {
        "strict": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "allowJs": false,
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "jsxImportSource": "solid-js",
        "outDir": "./dist",
        "isolatedModules": true
    },
    "include": [
        "./src"
    ],
    "exclude": [
        "node_modules/"
    ]
}